@code {
    [Parameter] public string ActiveTab { get; set; } = "Products";
    [Parameter] public EventCallback<string> ActiveTabChanged { get; set; }

    private List<BreadcrumbItem> BreadcrumbItems = new()
    {
        new BreadcrumbItem("Clients", href: "/clients"),
        new BreadcrumbItem("Client A - Products", href: null, disabled: true)
    };

    private async Task SetActiveTab(string tabName)
    {
        ActiveTab = tabName;
        await ActiveTabChanged.InvokeAsync(tabName);
    }

    private string GetNavButtonStyle(string tabName)
    {
        var isActive = ActiveTab == tabName;
        var baseStyle = "color: white; text-transform: none; font-weight: 400; margin-right: 8px; padding: 8px 16px; border-radius: 4px; min-height: 36px;";

        if (isActive)
        {
            return baseStyle + " background-color: rgba(255,255,255,0.15); font-weight: 500;";
        }

        return baseStyle + " background-color: transparent;";
    }
}