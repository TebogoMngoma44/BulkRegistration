@* @attribute [Authorize] *@
@using MudBlazor

@* 
<CascadingAuthenticationState>
    <AuthorizeView Context="DialogStep">
        <Authorized>
*@
<!-- Desktop Layout -->
<MudHidden Breakpoint="Breakpoint.SmAndDown">
    <MudPaper Class="@GetScheduleClass()">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudStack>
                <MudText Typo="Typo.h6" Class="@GetScheduleTitleClass()">
                    @GetSchedulePrefix(): @CompletedDate
                </MudText>
                <MudText Typo="Typo.body2" Class="@GetScheduleDurationClass()">
                    @Duration
                </MudText>
            </MudStack>
            <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Large" Class="@GetScheduleIconClass()" />
        </MudStack>
    </MudPaper>
</MudHidden>

<!-- Mobile Layout -->
<MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudPaper Class="@GetMobileScheduleClass()">
        <MudStack Spacing="3">
            <!-- Icon and Status Row -->
            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Medium" Class="@GetMobileScheduleIconClass()" />
                    <MudText Typo="Typo.subtitle1" Class="@GetMobileScheduleTitleClass()">
                        @GetSchedulePrefix()
                    </MudText>
                </MudStack>
                <MudChip T="string" Size="Size.Small" Variant="Variant.Filled"
                         Style="@GetStatusChipStyle()">
                    @GetStatusText()
                </MudChip>
            </MudStack>

            <!-- Date and Duration -->
            <MudStack Spacing="1">
                <MudText Typo="Typo.body1" Class="@GetMobileDateClass()">
                    @CompletedDate
                </MudText>
                <MudText Typo="Typo.body2" Class="@GetMobileScheduleDurationClass()">
                    @Duration
                </MudText>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudHidden>
@* </Authorized>
        <NotAuthorized>
            @{
                NavigationManager.NavigateTo("/auth/logout");
            }
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState> *@

@code {
    [Parameter] public string CompletedDate { get; set; } = "";
    [Parameter] public string Duration { get; set; } = "";
    [Parameter] public bool IsInProgress { get; set; } = false;
    [Parameter] public bool IsPending { get; set; } = false;

    // Desktop styles
    private string GetScheduleClass()
    {
        if (IsInProgress)
            return "dialog-schedule-progress";
        if (IsPending)
            return "dialog-schedule-pending";
        return "dialog-schedule";
    }

    private string GetScheduleTitleClass()
    {
        if (IsInProgress || IsPending)
            return "schedule-title-warning";
        return "schedule-title";
    }

    private string GetScheduleDurationClass()
    {
        if (IsInProgress || IsPending)
            return "schedule-duration-warning";
        return "schedule-duration";
    }

    private string GetScheduleIconClass()
    {
        if (IsInProgress || IsPending)
            return "schedule-icon-warning";
        return "schedule-icon";
    }

    // Mobile styles
    private string GetMobileScheduleClass()
    {
        if (IsInProgress)
            return "dialog-schedule-progress-mobile";
        if (IsPending)
            return "dialog-schedule-pending-mobile";
        return "dialog-schedule-mobile";
    }

    private string GetMobileScheduleTitleClass()
    {
        if (IsInProgress || IsPending)
            return "mobile-schedule-title-warning";
        return "mobile-schedule-title";
    }

    private string GetMobileDateClass()
    {
        if (IsInProgress || IsPending)
            return "mobile-date-warning";
        return "mobile-date";
    }

    private string GetMobileScheduleDurationClass()
    {
        if (IsInProgress || IsPending)
            return "mobile-schedule-duration-warning";
        return "mobile-schedule-duration";
    }

    private string GetMobileScheduleIconClass()
    {
        if (IsInProgress || IsPending)
            return "mobile-schedule-icon-warning";
        return "mobile-schedule-icon";
    }

    private string GetStatusChipStyle()
    {
        if (IsInProgress)
            return "background-color: #0288d1; color: white; font-size: 11px; font-weight: 600;";
        if (IsPending)
            return "background-color: #b45309; color: white; font-size: 11px; font-weight: 600;";
        return "background-color: #0277bd; color: white; font-size: 11px; font-weight: 600;";
    }

    private string GetStatusText()
    {
        if (IsInProgress)
            return "In Progress";
        if (IsPending)
            return "Pending";
        return "Completed";
    }

    private string GetSchedulePrefix()
    {
        if (IsInProgress)
            return "Started";
        if (IsPending)
            return "Scheduled";
        return "Completed";
    }
}


<style>
    /* Desktop Schedule Styles */
    .dialog-schedule {
        background: linear-gradient(135deg, #e0f2fe, #b3e5fc);
        border-radius: 12px;
        padding: clamp(20px, 4vw, 24px);
        margin-top: 32px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .dialog-schedule:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(2, 119, 189, 0.2);
        }

    .dialog-schedule-progress {
        background: linear-gradient(135deg, #e0f2fe, #b3e5fc);
        border-radius: 12px;
        padding: clamp(20px, 4vw, 24px);
        margin-top: 32px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .dialog-schedule-progress:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(2, 119, 189, 0.2);
        }

    .dialog-schedule-pending {
        background: linear-gradient(135deg, #fef3c7, #f59e0b);
        border-radius: 12px;
        padding: clamp(20px, 4vw, 24px);
        margin-top: 32px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .dialog-schedule-pending:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.2);
        }

    /* Mobile Schedule Styles */
    .dialog-schedule-mobile {
        background: linear-gradient(135deg, #e0f2fe, #b3e5fc);
        border-radius: 16px;
        padding: 20px;
        margin-top: clamp(20px, 5vw, 32px);
        border: 1px solid rgba(2, 119, 189, 0.1);
    }

    .dialog-schedule-progress-mobile {
        background: linear-gradient(135deg, #e0f2fe, #b3e5fc);
        border-radius: 16px;
        padding: 20px;
        margin-top: clamp(20px, 5vw, 32px);
        border: 1px solid rgba(2, 119, 189, 0.1);
    }

    .dialog-schedule-pending-mobile {
        background: linear-gradient(135deg, #fef3c7, #f59e0b);
        border-radius: 16px;
        padding: 20px;
        margin-top: clamp(20px, 5vw, 32px);
        border: 1px solid rgba(245, 158, 11, 0.1);
    }

    /* Desktop Text Styles */
    .schedule-title {
        font-weight: 600;
        color: #0277bd;
        font-size: clamp(16px, 3vw, 18px);
        line-height: 1.3;
    }

    .schedule-title-warning {
        font-weight: 600;
        color: #92400e;
        font-size: clamp(16px, 3vw, 18px);
        line-height: 1.3;
    }

    .schedule-duration {
        color: #0288d1;
        font-size: clamp(13px, 2.5vw, 14px);
        margin-top: 4px;
    }

    .schedule-duration-warning {
        color: #b45309;
        font-size: clamp(13px, 2.5vw, 14px);
        margin-top: 4px;
    }

    .schedule-icon {
        color: #0288d1;
    }

    .schedule-icon-warning {
        color: #b45309;
    }

    /* Mobile Text Styles */
    .mobile-schedule-title {
        font-weight: 600;
        color: #0277bd;
        font-size: 16px;
        line-height: 1.3;
    }

    .mobile-schedule-title-warning {
        font-weight: 600;
        color: #92400e;
        font-size: 16px;
        line-height: 1.3;
    }

    .mobile-date {
        color: #0277bd;
        font-size: 15px;
        font-weight: 500;
        line-height: 1.4;
    }

    .mobile-date-warning {
        color: #92400e;
        font-size: 15px;
        font-weight: 500;
        line-height: 1.4;
    }

    .mobile-schedule-duration {
        color: #0288d1;
        font-size: 13px;
        line-height: 1.3;
    }

    .mobile-schedule-duration-warning {
        color: #b45309;
        font-size: 13px;
        line-height: 1.3;
    }

    .mobile-schedule-icon {
        color: #0288d1;
    }

    .mobile-schedule-icon-warning {
        color: #b45309;
    }

    /* Status Chip Styles */
    .status-chip-completed {
        background-color: #0277bd;
        color: white;
        font-size: 11px;
        font-weight: 600;
    }

    .status-chip-progress {
        background-color: #0288d1;
        color: white;
        font-size: 11px;
        font-weight: 600;
    }

    .status-chip-pending {
        background-color: #b45309;
        color: white;
        font-size: 11px;
        font-weight: 600;
    }

    /* Unauthorized Styles - Desktop */
    .unauthorized-schedule {
        background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
        border-radius: 12px;
        padding: clamp(20px, 4vw, 24px);
        margin-top: 32px;
        border: 1px solid #ccc;
        opacity: 0.8;
    }

    .unauthorized-title {
        font-weight: 600;
        color: #757575;
        font-size: clamp(16px, 3vw, 18px);
    }

    .unauthorized-text {
        color: #9e9e9e;
        font-size: clamp(13px, 2.5vw, 14px);
        margin-top: 4px;
    }

    .unauthorized-icon {
        color: #757575;
    }

    /* Unauthorized Styles - Mobile */
    .unauthorized-schedule-mobile {
        background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
        border-radius: 16px;
        padding: 24px 20px;
        margin-top: clamp(20px, 5vw, 32px);
        border: 1px solid #ccc;
        text-align: center;
    }

    .unauthorized-title-mobile {
        font-weight: 600;
        color: #757575;
        font-size: 18px;
        line-height: 1.3;
    }

    .unauthorized-text-mobile {
        color: #9e9e9e;
        font-size: 14px;
        line-height: 1.4;
        max-width: 250px;
        margin: 0 auto;
    }

    .unauthorized-icon-mobile {
        color: #757575;
        opacity: 0.7;
    }

    .unauthorized-login-button {
        border-color: #757575;
        color: #757575;
        font-size: 13px;
        text-transform: none;
        border-radius: 20px;
        padding: 8px 16px;
        min-height: 36px;
    }

        .unauthorized-login-button:hover {
            background-color: #757575;
            color: white;
            transform: translateY(-1px);
        }

    /* Responsive Design */
    @@media (max-width: 960px) {
        .dialog-schedule, .dialog-schedule-progress, .dialog-schedule-pending, .unauthorized-schedule {
            margin-top: 24px;
            border-radius: 10px;
        }
    }

    @@media (max-width: 600px) {
        .dialog-schedule-mobile, .dialog-schedule-progress-mobile, .dialog-schedule-pending-mobile, .unauthorized-schedule-mobile {
            margin-top: 20px;
            padding: 16px;
            border-radius: 12px;
        }

        .unauthorized-text-mobile {
            font-size: 13px;
        }

        .unauthorized-login-button {
            width: 100%;
            max-width: 120px;
        }
    }

    @@media (max-width: 480px) {
        .dialog-schedule-mobile, .dialog-schedule-progress-mobile, .dialog-schedule-pending-mobile {
            padding: 14px;
        }

        .unauthorized-schedule-mobile {
            padding: 20px 14px;
        }

        .mobile-date {
            font-size: 14px;
        }

        .mobile-date-warning {
            font-size: 14px;
        }
    }

    /* Animation */
    .mud-paper {
        animation: slideInUp 0.4s ease-out;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Ensure content doesn't break awkwardly */
    .schedule-title,
    .schedule-title-warning,
    .mobile-schedule-title,
    .mobile-schedule-title-warning {
        word-wrap: break-word;
    }

    .mobile-date,
    .mobile-date-warning {
        word-wrap: break-word;
    }
</style>
